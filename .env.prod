# .env.prod (example — keep secret and out of git)
DATABASE_URL=postgresql+psycopg2://slotify:slotify_pass@db:5432/slotifydb
UPLOAD_DIR=/app/uploads
API_HOST=0.0.0.0
API_PORT=8000

# system binary paths inside container (these exist in the container Dockerfile)
TESSERACT_CMD=/usr/bin/tesseract
POPPLER_PATH=/usr/bin

# security
SECRET_KEY=replace_this_with_a_strong_random_value

# CORS — restrict in production to your frontend URL(s)
CORS_ALLOW_ORIGINS=http://localhost:3000

